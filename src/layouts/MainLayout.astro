---
const { title } = Astro.props;
import CrtIntro from "@components/CrtIntro/CrtIntro.svelte";
import Head from "@components/Head/Head.svelte";
import Header from "@components/Header/Header.svelte";
import Cursor from "@components/Cursor/Cursor.svelte";
import Scrollbar from "@components/Scrollbar/Scrollbar.svelte";
import ThemeToggle from "@components/ThemeToggle/ThemeToggle.svelte";
import GrainEffect from "@components/GrainEffect/GrainEffect.svelte";
---

<script is:inline>
    document.addEventListener("unload", (e) => {
        e.preventDefault();
        location.reload();
        return false;
    });

    window.addEventListener("unload", (e) => {
        e.preventDefault();
        location.reload();
        return false;
    });
</script>

<script>
    // Swup
    import Swup from "swup";
    import SwupHeadPlugin from "@swup/head-plugin";
    import SwupJsPlugin from "@swup/js-plugin";

    // Smooth Scrollbar + GSAP ScrollTrigger
    gsap.registerPlugin(ScrollTrigger, ScrollSmoother);

    const scroll_smoother = ScrollSmoother.create({
        wrapper: "#smooth-wrapper",
        content: "#smooth-content",
        smooth: 1.25,
        smoothTouch: 0.1,
    });

    const to_any_page_in = next => {
        gsap.to("#swup", {
            duration: 0.5,
            opacity: 1,
            onComplete: next
        });
    }

    const from_any_page_out = next => {
        gsap.to("#swup", {
            duration: 0.5,
            opacity: 0,
            onComplete: next
        });
    }

    const to_about_in = next => {
        gsap.to("body", {
            duration: 0.65,
            overflow: "hidden",
        });

        gsap.to("#swup", {
            duration: 0.65,
            onStart: ScrollTrigger.refresh,
            onComplete: next,
        });

        gsap.to("body", {
            delay: 0.65,
            overflow: "auto",
            onComplete: () => gsap.getById("scrollbar-tween").progress(0),
        });
    }

    const from_work_out = next => {
        gsap.to("#swup", {
            duration: 0.65,
            onComplete: next,
        });

        gsap.to(".work", {
            duration: 0.65,
            xPercent: 250,
            stagger: 0.01,
            ease: "power2.in",
        });

        gsap.to(".work-line", {
            duration: 0.35,
            width: "0%",
            stagger: 0.025,
        });
    }

    const to_work_in = next => {
        gsap.to("body", {
            duration: 0.3,
            overflow: "hidden",
        });

        gsap.to("#swup", {
            duration: 0.4,
            onStart: ScrollTrigger.refresh,
            onComplete: next,
        });

        gsap.to("body", {
            delay: 0.3,
            duration: 0.01,
            onComplete: () => gsap.getById("scrollbar-tween").progress(0),
        });

        gsap.to("body", {
            delay: 0.3,
            duration: 0.01,
            overflow: "auto",
        });
    }

    const from_about_out = next => {
        gsap.to("#swup", {
            duration: 0.6,
            ease: "power4.out",
            autoAlpha: 0,
            onComplete: next,
        });
    }

    const start_from_page_top = () => scroll_smoother.scrollTop(1);

    new Swup({
        animateHistoryBrowsing: true,
        plugins: [
            new SwupHeadPlugin(),
            new SwupJsPlugin([
                {
                    from: "(.*)",
                    to: "(.*)",
                    in: next => to_any_page_in(next),
                    out: next => from_any_page_out(next),
                },
                {
                    from: "/",
                    to: "/about",
                    in: next => to_about_in(next),
                    out: next => from_work_out(next),
                },
                {
                    from: "/about",
                    to: "/",
                    in: next => to_work_in(next),
                    out: next => from_about_out(next),
                },
            ]),
        ],
    }).on("pageView", start_from_page_top);
</script>

<!DOCTYPE html>
<html lang="en" class="dark-theme || light-theme">
    <Head {title}/>

    <body onload="">
        <div class="main-content">
            <Header client:load/>
            <Cursor client:load/>
            <Scrollbar client:load/>
            <ThemeToggle client:only="svelte"/>

            <div id="smooth-wrapper">
                <div id="smooth-content">
                    <GrainEffect/>
                    <main id="swup">
                        <slot/>
                    </main>
                </div>
            </div>
        </div>

        <!-- Starts animation after main content is fetched -->
        <CrtIntro client:load/>
    </body>
</html>

<style is:global>
    @import "/styles/resets.css";
    @import "/styles/colors.css";
    @import "/styles/fonts.css";

    :root {
        font-family: var(--text-font);
        font-weight: normal;
        font-feature-settings: "lnum";
        color-scheme: light dark;

        /* Font smoothing */
        font-synthesis: none;
        text-rendering: optimizeLegibility;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        -webkit-text-size-adjust: 100%;

        /* Non-selectable text */
        -webkit-touch-callout: none;
        -webkit-user-select: none;
        -khtml-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        cursor: default;

        /* Animated values */
        transition: background-color 600ms,
                    color 600ms,
                    box-shadow 600ms,
                    filter 600ms;
    }

    /* Hide scrollbar */
    * {
        /* Firefox */
        scrollbar-width: none;
    }
    body {
        overscroll-behavior: none;
    }
    body::-webkit-scrollbar {
        display: none;
    }

    code {
        font-family: "Fira Code", Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
    }

    .main-content {
        visibility: hidden;
    }
</style>
